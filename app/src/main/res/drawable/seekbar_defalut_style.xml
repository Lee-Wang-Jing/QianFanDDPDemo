<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 未选中 -->
    <item
        android:id="@android:id/background"
        android:height="3dp"
        android:gravity="center_vertical">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/color_44000000"
                android:centerY="0.75"
                android:endColor="@color/color_44000000"
                android:startColor="@color/color_44000000" />
        </shape>
    </item>
    <!-- 中 -->
    <!--  第二进度条  -->
    <item
        android:id="@android:id/secondaryProgress"
        android:height="3dp"
        android:gravity="center_vertical">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/color_2eb66a"
                    android:centerY="0.75"
                    android:endColor="@color/color_2eb66a"
                    android:startColor="@color/color_2eb66a" />
            </shape>
        </clip>
    </item>
    <!--  第一进度条  -->
    <item
        android:id="@android:id/progress"
        android:height="3dp"
        android:gravity="center_vertical">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/color_2eb66a"
                    android:centerY="0.75"
                    android:endColor="@color/color_2eb66a"
                    android:startColor="@color/color_2eb66a" />
            </shape>
        </clip>
    </item>
</layer-list>